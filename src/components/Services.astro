	/* Slider Style
--------------------------------------*/
	.cd-slider {
		position: relative;
		width: 100%;
		height: 50rem;
		overflow: hidden;
		/* margin-bottom: 8rem; */
		border-radius:10px !important;
	}
	.cd-slider li {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		visibility: hidden;
		transition: visibility 0s 1s;
		will-change: visibility;
	}
	.image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-size: cover;
		background-position: 50% 50%;
		clip: rect(0, 100rem, 50rem, 100rem);
		transition: clip 0.5s cubic-bezier(0.99, 0.01, 0.45, 0.9) 0.5s;
		will-change: clip;
	}

	.image:before,
	.image:after {
		content: "";
		position: absolute;
		display: block;
		left: 0px;
		bottom: 0px;
		width: 100%;
		height: 50%;
	}

	.image:before {
		bottom: 0;
		background: linear-gradient(to top, #14293c 0%, transparent 100%);
	}

	.image:after {
		bottom: 0;
		background: linear-gradient(to top, #14293c 0%, transparent 100%);
	}

	.content {
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 100%;
		/* padding: 2rem 0 0 2rem; */
		font-family: "LiberationSans";
		text-align: left;
		margin-bottom: 100px;
	}
	.content h2 {
		text-overflow: ellipsis;
		overflow: hidden;
		transform: translateY(30%);
		opacity: 0;
		transition: transform 0.5s, opacity 0.5s;
		will-change: transform, opacity;
		position: absolute;
		bottom: 100px;
	}
